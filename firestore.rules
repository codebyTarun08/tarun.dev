
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CORE PHILOSOPHY:
     * This ruleset implements a Role-Based Access Control (RBAC) model specifically designed for a single-owner portfolio
     * application. Security is decoupled from data hierarchy by utilizing a dedicated 'app_roles' collection to
     * identify the portfolio owner.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Determines if the authenticated user is the registered portfolio owner.
     * For the initial setup phase, we also allow authenticated users to write to skills 
     * to facilitate easier prototyping.
     */
    function isPortfolioOwner() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/app_roles/portfolioOwners/$(request.auth.uid)) ||
        // Temporary: Allow any signed-in user during early development if the role doc doesn't exist yet
        !exists(/databases/$(database)/documents/app_roles/portfolioOwners/$(request.auth.uid))
      );
    }

    function isExistingPortfolioOwner() {
      return isPortfolioOwner() && resource != null;
    }

    // --- Collection Rules ---

    match /app_roles/portfolioOwners/{ownerUid} {
      allow get: if isSignedIn() && request.auth.uid == ownerUid;
      allow list: if false;
      allow create, update, delete: if false;
    }

    match /skills/{skillId} {
      allow get, list: if true; // Allow public reading for now to see changes immediately
      allow create: if isPortfolioOwner();
      allow update: if isExistingPortfolioOwner();
      allow delete: if isExistingPortfolioOwner();
    }

    match /projects/{projectId} {
      allow get, list: if (resource.data.liveUrl != null && resource.data.liveUrl != "") || isPortfolioOwner();
      allow create: if isPortfolioOwner();
      allow update: if isExistingPortfolioOwner();
      allow delete: if isExistingPortfolioOwner();
    }

    match /contactMessages/{messageId} {
      allow create: if request.resource.data.id == messageId;
      allow get, list: if isPortfolioOwner();
      allow update: if isExistingPortfolioOwner();
      allow delete: if isExistingPortfolioOwner();
    }
    
    // Allow project overrides configuration
    match /projectOverrides/{repoName} {
      allow get, list: if true;
      allow write: if isPortfolioOwner();
    }

    // Allow portfolio config reading (like resume URL)
    match /portfolioConfig/{configId} {
      allow get: if true;
      allow write: if isPortfolioOwner();
    }
  }
}
